<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createpass"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/EnterPass_btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back"
            android:layout_margin="20dp"
            android:padding="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_enterpass"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="210dp"
            android:background="@drawable/inputpassword" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cài đặt mật khẩu"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/account"
                android:backgroundTint="#888888" />

            <EditText
                android:id="@+id/Create_ThongTin"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="28dp"
                android:hint="Nhập thông tin"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/ic_password"
                android:backgroundTint="#888888" />

            <EditText
                android:id="@+id/Create_Pass"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                android:hint="Nhập mật khẩu" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/ic_password"
                android:backgroundTint="#888888" />

            <EditText
                android:id="@+id/Create_rePass"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                android:hint="Nhập lại mật khẩu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Create_passwordRequirements"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Ghi chú: Mật khẩu ít nhất 8 kí tự gồm:"
                android:textSize="15sp"
                android:textColor="#FF0000"/>

            <TextView
                android:id="@+id/Create_tvLowercase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Ít nhất 1 chữ thường"
                android:textColor="#FF0000"/>

            <TextView
                android:id="@+id/Create_tvUppercase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Ít nhất 1 chữ hoa"
                android:textColor="#FF0000" />


            <TextView
                android:id="@+id/Create_tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Ít nhất 1 số"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/Create_tvSpecialChar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Ít nhất 1 ký tự đặc biệt"
                android:textColor="#FF0000" />

        </LinearLayout>

        <Button
            android:id="@+id/Create_btnXacNhan"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="#FF0000"
            android:layout_gravity="center"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>