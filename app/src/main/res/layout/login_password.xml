<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginpassword"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/login_btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_back"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="244dp"
            android:background="@drawable/inputpassword" />

        <TextView
            android:id="@+id/login_tvXinChao"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Xin chào"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_password"
                android:backgroundTint="#888888" />

            <EditText
                android:id="@+id/login_editPassWord"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Nhập mật khẩu" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_tvQuenMatKhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu"
                android:layout_gravity="end"
                android:textColor="#0000FF"
                android:textSize="15sp"
                android:textStyle="italic" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/login_tvKhongPhaiToi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không phải tôi"
                android:textColor="#0000FF"
                android:textSize="15sp"
                android:textStyle="italic" />
        </LinearLayout>

        <Button
            android:id="@+id/login_btnDangNhap"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:backgroundTint="#FF0000"
            android:layout_marginTop="100dp"
            android:text="Tiếp tục"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>